{
    "name": "tecnocen/yii2-app-roa",
    "description": "Yii 2 ROA Project Template",
    "keywords": [
        "yii2",
        "framework",
        "advanced",
        "project template",
        "rest",
        "soa",
        "roa",
        "architecture"
    ],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii2"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.0",
        "lib-openssl": ">=1.0",
        "tecnocen/yii2-roa": "*",
        "tecnocen/yii2-migrate": "*",
        "yiisoft/yii2": "~2.0.14",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0 || ~2.1.0",
        "tecnocen/yii2-oauth2-server": "~3.0.2",
        "guzzlehttp/guzzle": ">=4.1.4 <7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.4",
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",

        "codeception/base": "^2.2.11",
        "codeception/verify": "~0.3.1",
        "flow/jsonpath": ">0.2"
    },
    "config": {
        "process-timeout": 1800
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:Faryshta/yii2-oauth2-server.git"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "classmap": [
            "console/ComposerListener.php",
            "console/DatabaseListener.php",
            "console/FrameworkListener.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "console\\ComposerListener::init"
        ],
        "pre-update-cmd": [
            "console\\ComposerListener::init"
        ],
        "githook-precommit-file": [
            "@php -l",
            "@php vendor/bin/php-cs-fixer fix --dry-run --diff"
        ],
        "deploy": [
            "@composer update --prefer-dist --prefer-stable",
            "console\\ComposerListener::autoload" ,
            "@deploy-framework",
            "@deploy-database",
            "@run-tests"
        ],
        "deploy-framework": [
            "console\\FrameworkListener::deploy"
        ],
        "deploy-database": [
            "@config-database",
            "@run-migrations",
            "@run-fixtures",
            "@clear-framework-cache"
        ],
        "truncate-database": [
            "console\\DatabaseListener::truncate",
            "@run-migrations",
            "@run-fixtures",
            "@clear-framework-cache"
        ],
        "config-database": [
            "console\\DatabaseListener::config"
        ],
        "run-migrations": [
            "@php yii migrate/up 0 -p=@console/migrations/tables --interactive=0",
            "@php yii migrate/up 0 -p=@tecnocen/oauth2server/migrations/tables --interactive=0",
            "@php yii migrate/up 0 -p=@console/migrations/views --interactive=0",
            "@php yii_test migrate/up 0 -p=@console/migrations/tables --interactive=0",
            "@php yii_test migrate/up 0 -p=@tecnocen/oauth2server/migrations/tables --interactive=0",
            "@php yii_test migrate/up 0 -p=@console/migrations/views --interactive=0"
        ],
        "run-fixtures": [
            "@php yii fixture '*' --interactive=0",
            "@php yii_test fixture '*' --interactive=0"
        ],
        "truncate-migrations": [
            "@php yii migrate/down 0 -p=@tecnocen/oauth2server/migrations/tables --interactive=0",
            "@php yii migrate/down 0 --interactive=0",
            "@php yii_test migrate/down 0 -p=@tecnocen/oauth2server/migrations/tables --interactive=0",
            "@php yii_test migrate/down 0 --interactive=0",
            "@run-migrations",
            "@clear-framework-cache"
        ],
        "clear-framework-cache": [
            "rm -rf backend/runtime/cache/*",
            "rm -rf console/runtime/cache/*",
            "rm -rf frontend/runtime/cache/*"
        ],
        "run-tests": [
            "@composer exec -vv -- codecept run"
        ],
        "run-tests-debug": [
            "@php vendor/bin/codecept run -vv -f --no-rebuild"
        ],
        "run-coverage": [
            "@composer exec -vv -- codecept run --coverage --coverage-xml"
        ]
    }
}
