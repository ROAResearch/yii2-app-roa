{
    "name": "tecnocen/yii2-app-roa",
    "description": "Yii 2 ROA Project Template",
    "keywords": [
        "yii2",
        "framework",
        "advanced",
        "project template",
        "rest",
        "soa",
        "roa",
        "architecture"
    ],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii2"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5.9",
        "lib-openssl": ">=1.0",
        "tecnocen/yii2-roa": "*",
        "yiisoft/yii2": "~2.0.10",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "filsh/yii2-oauth2-server": "2.0.3"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",

        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1"
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:Faryshta/yii2-oauth2-server.git"
        },
        {
            "type": "vcs",
             "url": "git@bitbucket.org:tecnocen/yii2-roa.git"
        }
    ],
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "autoload": {
        "classmap": [
            "console/ComposerListener.php",
            "console/DatabaseListener.php",
            "console/FrameworkListener.php"
        ]
    },
    "scripts": {
        "command": [
            "console\\ComposerListener::init"
        ],
        "pre-install-cmd": [
            "console\\ComposerListener::init"
        ],
        "pre-update-cmd": [
            "console\\ComposerListener::init"
        ],
        "post-create-project-cmd": [
            "@deploy"
        ],
        "deploy": [
            "@deploy-framework",
            "@deploy-database",
            "@run-tests"
        ],
        "deploy-framework": [
            "console\\FrameworkListener::deploy"
        ],
        "deploy-database": [
            "@config-database",
            "@run-migrations",
            "@run-fixtures",
            "@clear-cache"
        ],
        "truncate-database": [
            "console\\DatabaseListener::truncate",
            "@run-migrations",
            "@run-fixtures",
            "@clear-cache"
        ],
        "config-database": [
            "console\\DatabaseListener::config"
        ],
        "run-migrations": [
            "@php yii migrate/up 1 -p=@vendor/filsh/yii2-oauth2-server/migrations --interactive=0",
            "@php yii migrate/up all --interactive=0"
        ],
        "run-fixtures": [
            "@php yii fixture '*' --interactive=0"
        ],
        "clear-cache": "rm -rf backend/runtime/cache/* frontend/runtime/cache/* console/runtime/cache/*",
        "run-tests": [
            "@composer exec -vv -- codecept run"
        ],
        "run-coverage": [
            "@composer exec -vv -- codecept run --coverage --coverage-xml"
        ]
    }
}
